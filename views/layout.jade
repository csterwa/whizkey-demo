doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
  body
    nav(class='navbar navbar-fixed-top green')
      div(class='container')
        div(class='navbar-header')
          button(type='button' class='navbar-toggle collapsed', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span(class='sr-only') Toggle navigation
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand', href='#')
            span(class='brand-title') #{title}
        div(id="navbar", class="navbar-collapse collapse")
          ul(class="nav navbar-nav")
            li(class="active")
              a(href='/find') Find a Whiskey
            li()
              a(href="/add") Add a Whiskey
          ul(class="nav navbar-nav navbar-right")
            li
              a(href="/favorites") My Favorites
            li
              a(href="/auth/github") Sign Up with Github

    div(class='container')
      block content

    script(type='text/javascript', src="//code.jquery.com/jquery-1.11.2.min.js")
    script(type='text/javascript', src="//code.jquery.com/jquery-migrate-1.2.1.min.js")
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
